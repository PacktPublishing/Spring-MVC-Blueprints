<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN" "http://castor.exolab.org/mapping.dtd">
<mapping>
    <description>
		Spring OXM and Castor (Parsing)
    </description>
    <class name="org.packt.human.resource.portal.model.data.HrmsLogin">
        <map-to xml="HrmsLogin" />
        <field name="hrmsEmployeeDetails.empId" type="int">
            <bind-xml name="empId" node="attribute"/>
        </field>
        <field name="username" type="string">
            <bind-xml name="username" node="element"/>
        </field>
        <field name="password" type="string">
            <bind-xml name="password" node="element"/>
        </field>
         <field name="role" type="string">
            <bind-xml name="role" node="element"/>
        </field>
    </class>
 </mapping>    